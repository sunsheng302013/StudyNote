<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cq.dao.user.UserSpecialDao" >
  <resultMap id="BaseResultMap" type="com.cq.model.user.UserSpecial" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="user_id" property="userId" jdbcType="BIGINT" />
    <result column="special_id" property="specialId" jdbcType="BIGINT" />
    <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP" />
    <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, user_id, special_id, gmt_create, gmt_modified
  </sql>
  
  <select id="selectByUserId" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select 
    <include refid="Base_Column_List" />
    from j_oa_user_special
    where user_id = #{userId,jdbcType=BIGINT}
  </select>
  
  <delete id="deleteByUserId" parameterType="java.lang.Long" >
    delete from j_oa_user_special
    where user_id = #{userId,jdbcType=BIGINT}
  </delete>
  <!-- 批量删除 -->
  <delete id="deleteBatchByUserId" parameterType="object" >
    delete from j_oa_user_special
    where user_id IN
    <foreach collection="list" separator="," open="(" close=")" item="item" index="index">
			#{item}
	 </foreach>
  </delete>
  
  <delete id="deleteBatch" parameterType="object" >
    delete from j_oa_user_special
    where user_id IN
    <foreach collection="list" separator="," open="(" close=")" item="item" index="index">
			#{item}
	 </foreach>
  </delete>

  <insert id="insert" parameterType="object">
    insert into j_oa_user_special
    (user_id, special_id)
      values
      <foreach collection = "list" item="special" index = "index" separator = ",">
      (#{special.userId},
       #{special.specialId})
      </foreach>
  </insert>
</mapper>