<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cq.dao.file.FileDao" >
  <resultMap id="BaseResultMap" type="com.cq.model.file.File" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="foreign_id" property="foreignId" jdbcType="BIGINT" />
    <result column="file_url" property="fileUrl" jdbcType="VARCHAR" />
    <result column="file_key" property="fileKey" jdbcType="VARCHAR" />
    <result column="gmt_create" property="gmtCreate" jdbcType="TIMESTAMP" />
    <result column="gmt_modified" property="gmtModified" jdbcType="TIMESTAMP" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, foreign_id, file_url, file_key, gmt_create, gmt_modified
  </sql>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from j_oa_file
    where id = #{id,jdbcType=INTEGER}
  </select>
  
  <delete id="deleteByForeignId" parameterType="java.lang.Long" >
    delete from j_oa_file
    where foreign_id = #{foreignId,jdbcType=BIGINT}
  </delete>
  
  <delete id="deleteBatchByUserId" parameterType="object" >
    delete from j_oa_file
    where foreign_id IN (
    select file_id from j_oa_user where user_id IN
    <foreach collection="list" separator="," open="(" close=")" item="item" index="index">
			#{item}
	 </foreach>
    )
  </delete>
  
  <insert id="insert" parameterType="object">
    insert into j_oa_file (id, foreign_id, file_url, file_key, gmt_create)
    values
    <foreach collection = "fileList" item="file" index = "index" separator = ",">
     (#{file.id,jdbcType=INTEGER}, 
      #{file.foreignId,jdbcType=BIGINT}, 
      #{file.fileUrl,jdbcType=VARCHAR}, 
      #{file.fileKey,jdbcType=VARCHAR}, 
      <if test="file.gmtCreate != null">
      #{file.gmtCreate,jdbcType=TIMESTAMP}
      </if>
      <if test="file.gmtCreate == null">
      now()
      </if>)
    </foreach>
  </insert>
  
</mapper>